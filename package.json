{
  "name": "reverie",
  "version": "0.0.2",
  "description": "An experiment in online worlds.",
  "repository": {
    "type": "git",
    "url": "https://github.com/jorsi/reverie.git"
  },
  "main": "index.js",
  "scripts": {
    "start": "npm run build && npm run serve",
    "prebuild": "npm run clean",
    "build": "npm run tslint && npm run build-ts && npm run build-client",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "build-ts": "tsc",
    "build-client": "npm run copy && browserify ./dist/client/client.js > ./dist/public/js/reverie.js",
    "serve": "node dist/index.js",
    "clean": "node scripts/clean.js",
    "copy": "node scripts/copy-static.js"
  },
  "author": "Jonathon Orsi",
  "license": "MIT",
  "dependencies": {
    "@types/socket.io-client": "^1.4.31",
    "express": "^4.16.2",
    "socket.io": "^2.0.3",
    "socket.io-client": "^2.0.3"
  },
  "devDependencies": {
    "@types/express": "^4.0.37",
    "@types/node": "^8.0.45",
    "@types/socket.io": "^1.4.31",
    "browserify": "^14.4.0",
    "tslint": "^5.7.0",
    "typescript": "^2.5.3"
  }
}
